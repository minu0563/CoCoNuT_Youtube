{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "3.0.4",
  "default_locale": "ko",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube.com/shorts/*"
  ],
    "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube.com/shorts/*"
      ],
      "js": ["js/content.js", "js/short.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "html/index.html",
    "default_title": "__MSG_defaultTitle__"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle_pip": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "__MSG_shortcut1__"
    },
    "skip_backward": {
      "suggested_key": {
        "default": "Ctrl+Left",
        "mac": "Command+Left"
      },
      "description": "__MSG_shortcut2__"
    },
    "skip_forward": {
      "suggested_key": {
        "default": "Ctrl+Right",
        "mac": "Command+Right"
      },
      "description": "__MSG_shortcut3__"
    }
  }
}
