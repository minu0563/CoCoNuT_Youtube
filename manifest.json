{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "3.0.4",
  "default_locale": "ko",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube.com/shorts/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube.com/shorts/*"
      ],
      "js": ["js/content.js", "js/short.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "html/index.html",
    "default_title": "__MSG_defaultTitle__"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
